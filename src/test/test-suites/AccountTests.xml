<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="AccountTests" verbose="2"  >

    <test name="CreatingAnAccount">
        <classes>
            <class name="com.automationpractice.tests.AccountTests.AuthorizationTest">
                <methods>
                    <include name="creationAnAccount"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="VerifyingAnAccount" >
        <classes>
            <class name="com.automationpractice.tests.AccountTests.AuthorizationTest">
                <methods>
                    <include name="testAuthorization"/>
                    <include name="testVerifyingPersonalInfo"/>
                    <include name="verifyAddress"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>