pipeline {

    agent any

    tools {
        maven_3_6_0 'mvn'
    }

    stages {

        stage ('version stage') {

            steps {
                bat 'mvn --version'
            }
        }

        stage ('Compilation stage') {

            steps {
                bat 'mvn clean compile'
            }
        }

        stage ('Testing stage') {

            steps {
                 bat 'mvn clean test'
            }
        }
    }
}